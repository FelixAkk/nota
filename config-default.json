{
  "serverAddress":            "localhost",
  "serverPort":               7483,
  "templatesPath":            "templates",

  "logging": {
    "verbose":                false,
    "notify":                 true,
    "pageResources":          false,
    "webrenderAddress":       true
  },

  "template": {
    "defaultFilename":        "output.pdf",
    "zoomFactor":             1,
    "paperSize": {
      "format":               "A4",
      "orientation":          "portrait",
      "margin":               "0cm"
    },
    "timeouts": {
      "resourcesLoaded":      1500,
      "templateInitSlow":     1500,
      "templateInitDead":     8000,
      "templateRenderSlow":   1500,
      "templateRenderDead":   8000,
      "errorJobAbort":        2000
    }
  }
}
